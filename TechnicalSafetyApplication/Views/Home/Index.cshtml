@model Dictionary<string, object>

<div class="bg-primary m-1 p-1 text-white"><h4>User Details</h4></div>

<table class="table table-sm table-bordered m-1 p-1">
    @foreach (var kvp in Model)
    {
        <tr>
            <th>@kvp.Key</th>
            <td>@kvp.Value</td>
        </tr>
    }
</table>

@if (User != null)
{
    @if (User.IsInRole(Utility.ADMINS_ROLE) == false)
    {
        <a asp-controller="Application" asp-action="Index" class="btn btn-danger">Your applications</a>
    }
    else    
    {
        <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-warning">Roles</a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-warning">Users</a>
        <br /><br /><br />
    }

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
    }
}


